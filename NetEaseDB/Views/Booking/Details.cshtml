@model NetEaseDB.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Booking ID</dt>
        <dd class="col-sm-10">@Model.BookingID</dd>

        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Model.EventInfo?.EventName</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.VenueName</dd>

        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.EventInfo?.EventDate.ToShortDateString()</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
