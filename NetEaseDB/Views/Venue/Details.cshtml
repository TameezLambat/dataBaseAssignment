@model NetEaseDB.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>@Model.VenueName</h1>

<div>
    <h3>Venue Information</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Venue Name</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" alt="Venue Image" style="max-width: 100%; height: auto;" />
            }
            else
            {
                <p>No image available.</p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
